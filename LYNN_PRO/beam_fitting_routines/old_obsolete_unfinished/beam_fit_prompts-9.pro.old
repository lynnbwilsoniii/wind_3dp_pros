      pro_out        = ["Your estimate for "+in_str[0]+" is:  "+def_val_str[0]+" km/s"]
      ;; => Inform user of results
      info_out       = beam_fit_gen_prompt(PRO_OUT=pro_out,FORM_OUT=7)
      ;;
      ;;  Let calling routine determine if results are okay after plotting
      ;;
