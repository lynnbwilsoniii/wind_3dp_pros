          ;; Output procedural information
          info_out       = beam_fit_gen_prompt(PRO_OUT=pro_out,FORM_OUT=7)
          ;; => Set/Reset outputs
          value_out      = 0.    ;; output value for prompt
          str_out        = "Enter a value for VSW_X [km/s] (format = XXXX.xxx):  "
